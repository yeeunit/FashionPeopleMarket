{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/commons/layout/index.js",
    "pages/_app.js",
    "src/commons/styles/media.js",
    "src/components/units/upload/upload.queries.js",
    "src/components/units/upload/upload.presenter.js",
    "src/components/units/upload/upload.container.js",
    "src/components/units/upload/upload.styles.js",
    "src/components/units/payment/payment.success.js",
    "src/components/units/payment/Payment.styles.js",
    "src/components/units/payment/Payment.js",
    "src/components/commons/question/Question.styles.js",
    "src/components/commons/question/Question.presenter.js",
    "src/components/units/boardComment/write/write/BoardCommentWrite.styles.js",
    "src/components/commons/map/index.js",
    "src/commons/store/index.js",
    "src/commons/styles/commonColor.js",
    "src/commons/styles/resetStyles.js"
  ],
  "exclude": ["node_modules"]
}
